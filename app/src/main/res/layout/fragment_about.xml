<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueDark"
    tools:context=".ui.fragment.about.AboutFragment">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/imageView16"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:background="@drawable/view_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">



        <TextView
            android:id="@+id/textView28"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABOUT"
            android:textColor="@color/blueDark"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.110000014" />

        <TextView
            android:id="@+id/about"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Jurnal Kas dirancang untuk membantu anda mengontrol keuangan dan mencapai tujuan keuangan Anda. Aplikasi kami menyediakan antarmuka yang mudah digunakan untuk Anda melacak penghasilan dan pengeluaran dalam satu tempat.Dengan Jurnal Kas, Anda dapat Melacak pengeluaran dan penghasilan Anda secara real-time Mengategorikan transaksi untuk memudahkan pemantauan"
            android:textAlignment="center"
            android:textColor="#0C1757"
            android:textIsSelectable="true"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView28"
            app:layout_constraintVertical_bias="0.100000024"
            tools:ignore="DuplicateIds,MissingConstraints" />

        <TextView
            android:id="@+id/thanks"
            android:layout_width="254dp"
            android:layout_height="84dp"
            android:text="Terimakasih sudah memilih kami untuk mengontrol keuangan Anda!"
            android:textAlignment="center"
            android:textColor="#0C1757"
            android:textIsSelectable="true"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/about"
            app:layout_constraintVertical_bias="0.110000014"
            tools:ignore="DuplicateIds,MissingConstraints" />

        <TextView
            android:id="@+id/copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyright Â© 2023 PT Otak Kanan, Surabaya, Indonesia"
            android:textColor="#0C1757"
            android:textIsSelectable="true"
            android:textSize="10sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/thanks"
            app:layout_constraintVertical_bias="0.90999997" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
